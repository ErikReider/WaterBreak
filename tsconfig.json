{
    "compilerOptions": {
        "target": "ES2020",
        "module": "commonjs",
        "resolveJsonModule": true,
        "strict": true,
        "baseUrl": "./",
        "rootDir": "./",
        "paths": {
            "*": ["*"],
            "src/*": ["./src/*"]
        },
        "esModuleInterop": true,
        "skipLibCheck": true,
        "forceConsistentCasingInFileNames": true
    }
}

